# Root .gitignore for monorepo
# Node dependencies
node_modules/

# npm/yarn/pnpm logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# OS files
.DS_Store
Thumbs.db

# Env files
.env
.env.*
*.local

# Build output
/dist/
/build/
/.next/
/.nuxt/
/.output/

# Serverless
.serverless/

# Coverage reports
/coverage/

# IDEs and editors
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# Misc
*.tsbuildinfo
*.pem

# Logs
/logs/
*.log

# Temporary byproducts
.pnp
.pnp.js

# Ignore root lock files (workspaces use individual locks)
package-lock.json
yarn.lock
pnpm-lock.yaml
